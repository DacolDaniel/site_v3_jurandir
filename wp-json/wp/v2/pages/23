lse},"author":1,"featured_media":0,"parent":0,"menu_order":0,"comment_status":"closed","ping_status":"closed","template":"","meta":{"_ti_tpc_template_sync":false,"_ti_tpc_template_id":"","footnotes":""},"class_list":["post-23","page","type-page","status-publish","hentry"],"_links":{"self":[{"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/pages\/23"}],"collection":[{"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/pages"}],"about":[{"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/types\/page"}],"author":[{"embeddable":true,"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/users\/1"}],"replies":[{"embeddable":true,"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/comments?post=23"}],"version-history":[{"count":33,"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/pages\/23\/revisions"}],"predecessor-version":[{"id":75,"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/pages\/23\/revisions\/75"}],"wp:attachment":[{"href":"http:\/\/localhost:3001\/wp-json\/wp\/v2\/media?parent=23"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}